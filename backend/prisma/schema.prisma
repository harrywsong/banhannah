// Prisma schema file for Yewon Educational Platform

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  name              String
  password          String
  role              String    @default("STUDENT")
  emailVerified     Boolean   @default(false)
  verificationToken String?
  tokenExpiry       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  reviews           Review[]
}

model File {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  format       String
  size         String?
  pages        String?
  fileUrl      String
  previewImage String?
  type         String?  @default("file")
  downloads    Int      @default(0)
  level        Int?     @default(1)  // ✅ ADD THIS LINE
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Course {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  type           String   @default("free")
  price          String?
  accessDuration Int?
  lessons        Json?
  students       Int      @default(0)
  previewImage   String?
  level          Int?     @default(1)  // ✅ ADD THIS LINE
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  itemId    Int
  itemType  String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, itemId, itemType])
}

model LiveClass {
  id                Int      @id @default(autoincrement())
  title             String
  description       String?
  date              String
  time              String
  timezone          String?  @default("Asia/Seoul")
  duration          String?
  platform          String?  @default("Zoom")
  meetingLink       String?
  instructor        String?
  maxParticipants   Int?     @default(20)
  registrationStart String?
  registrationEnd   String?
  previewImage      String?
  registeredCount   Int      @default(0)
  level             Int?     @default(1)  // ✅ ADD THIS LINE
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}