// backend/prisma/schema.prisma
// Updated Review model with itemTitle field

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  name              String
  password          String
  role              String    @default("STUDENT")
  emailVerified     Boolean   @default(false)
  verificationToken String?
  tokenExpiry       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  profilePicture    String?  
  reviews              Review[]
  purchases            Purchase[]
  classRegistrations   ClassRegistration[]
  courseProgress       CourseProgress[]
  resourceAccess       ResourceAccess[]
}

model File {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  format       String
  size         String?
  pages        String?
  fileUrl      String
  previewImage String?
  type         String?  @default("file")
  downloads    Int      @default(0)
  level        Int?     @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Course {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  type           String   @default("free")
  price          String?
  accessDuration Int?
  lessons        Json?
  students       Int      @default(0)
  previewImage   String?
  level          Int?     @default(1)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  itemId    Int
  itemType  String
  itemTitle String?  // âœ… ADDED: Store the title of the reviewed item
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, itemId, itemType])
}

model LiveClass {
  id                Int      @id @default(autoincrement())
  title             String
  description       String?
  date              String
  time              String
  timezone          String?  @default("Asia/Seoul")
  duration          String?
  platform          String?  @default("Zoom")
  meetingLink       String?
  instructor        String?
  maxParticipants   Int?     @default(20)
  registrationStart String?
  registrationEnd   String?
  previewImage      String?
  registeredCount   Int      @default(0)
  level             Int?     @default(1)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Purchase {
  id              Int      @id @default(autoincrement())
  userId          Int
  courseId        Int
  courseTitle     String
  price           String
  purchasedAt     DateTime @default(now())
  accessDuration  Int?
  transactionId   String   @unique
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([courseId])
}

model ClassRegistration {
  id            Int      @id @default(autoincrement())
  userId        Int
  classId       Int
  registeredAt  DateTime @default(now())
  createdAt     DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, classId])
  @@index([userId])
  @@index([classId])
}

model CourseProgress {
  id          Int      @id @default(autoincrement())
  userId      Int
  courseId    Int
  lessonId    String
  completed   Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId, lessonId])
  @@index([userId])
  @@index([courseId])
}

model ResourceAccess {
  id           Int      @id @default(autoincrement())
  userId       Int
  resourceId   Int
  resourceType String
  accessedAt   DateTime @default(now())
  purchased    Boolean  @default(false)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([resourceId])
}

model ContactSubmission {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  subject     String
  message     String
  emailSent   Boolean  @default(false)
  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  
  @@index([email])
  @@index([submittedAt])
}